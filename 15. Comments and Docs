// 2.
// in lib.rs

/// Add one to the given value and return the value
///
/// # Examples
///
/// ```
/// use my_crate::add_one; // Ensure the function is in scope
/// let arg = 5;
/// let answer = add_one(arg);
///
/// assert_eq!(6, answer);
/// ```
pub fn add_one(x: i32) -> i32 {
    x + 1
}


// 3.
// in src/compute.rs

/// # Panics
///
/// The function panics if the second argument is zero.
///
/// ```rust,should_panic
/// # use doc_comments::compute::div;
/// // panics on division by zero
/// div(10, 0);
/// ```
pub fn div(a: i32, b: i32) -> i32 {
    if b == 0 {
        panic!("Divide-by-zero error");
    }

    a / b
}


// 4.
// in src/compute.rs

/// # Panics
///
/// The function panics if the second argument is zero.
///
/// ```rust,should_panic
/// # use doc_comments::compute::div;
/// // panics on division by zero
/// div(10, 0);
/// ```
pub fn div(a: i32, b: i32) -> i32 {
    if b == 0 {
        panic!("Divide-by-zero error");
    }
    a / b
}

#[doc(hidden)]
/// ```
/// # use doc_comments::compute::try_div;
/// # fn try_main() -> Result<(), String> {
/// # let res = try_div(10, 2)?; // Changed 0 to 2 so the test actually passes!
/// # Ok(()) 
/// # }
/// # fn main() { 
/// #    try_main().unwrap();
/// # }
/// ```
pub fn try_div(a: i32, b: i32) -> Result<i32, String> {
    if b == 0 {
        Err(String::from("Divide-by-zero"))
    } else {
        Ok(a / b)
    }
}
